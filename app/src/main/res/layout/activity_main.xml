<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- App Title and Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SkySnap"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2c3e50"
        android:gravity="center"
        android:padding="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your complete weather and astronomy companion. Get real-time weather data, sunrise/sunset times, and atmospheric conditions all in one place."
        android:textSize="14sp"
        android:textColor="#7f8c8d"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- City Input Section -->

    <!-- Current Location Display -->
    <TextView
        android:id="@+id/tvCurrentLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📍 New York City, NY"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#34495e"
        android:gravity="center"
        android:padding="4dp"
        android:layout_marginBottom="8dp" />

    <!-- Current Temperature -->
    <TextView
        android:id="@+id/tvTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🌡️ Temperature: Loading..."
        android:textSize="18sp"
        android:padding="8dp"
        android:background="#ffffff"
        android:textColor="#2c3e50"
        android:layout_marginBottom="4dp"
        android:elevation="2dp" />

    <!-- Sunrise -->
    <TextView
        android:id="@+id/tvSunrise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🌅 Sunrise: Loading..."
        android:textSize="18sp"
        android:padding="8dp"
        android:textColor="#2c3e50"
        android:background="#ffffff"
        android:layout_marginBottom="4dp"
        android:elevation="2dp" />

    <!-- Sunset -->
    <TextView
        android:id="@+id/tvSunset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🌇 Sunset: Loading..."
        android:textSize="18sp"
        android:padding="8dp"
        android:textColor="#2c3e50"
        android:background="#ffffff"
        android:layout_marginBottom="4dp"
        android:elevation="2dp" />



    <!-- Humidity -->
    <TextView
        android:id="@+id/tvHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💧 Humidity: Loading..."
        android:textSize="18sp"
        android:padding="8dp"
        android:textColor="#2c3e50"
        android:background="#ffffff"
        android:layout_marginBottom="4dp"
        android:elevation="2dp" />

    <!-- Wind Speed -->
    <TextView
        android:id="@+id/tvWindSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💨 Wind: Loading..."
        android:textSize="18sp"
        android:padding="8dp"
        android:textColor="#2c3e50"
        android:background="#ffffff"
        android:layout_marginBottom="4dp"
        android:elevation="2dp" />

    <!-- Cloud Cover -->
    <TextView
        android:id="@+id/tvCloudCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="☁️ Cloud Cover: Loading..."
        android:textSize="18sp"
        android:padding="8dp"
        android:textColor="#2c3e50"
        android:background="#ffffff"
        android:layout_marginBottom="4dp"
        android:elevation="2dp" />

    <!-- Visibility -->
    <TextView
        android:id="@+id/tvVisibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="👁️ Visibility: Loading..."
        android:textSize="18sp"
        android:textColor="#2c3e50"
        android:padding="8dp"
        android:background="#ffffff"
        android:layout_marginBottom="16dp"
        android:elevation="2dp" />

    <!-- City Input Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter City Name:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1a252f"
        android:padding="4dp" />

    <EditText
        android:id="@+id/etCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g., New York, London, Tokyo"
        android:textSize="16sp"
        android:textColor="#2c3e50"
        android:textColorHint="#7f8c8d"
        android:padding="12dp"
        android:background="#ffffff"
        android:elevation="2dp"
        android:layout_marginBottom="8dp"
        android:inputType="textCapWords" />

    <!-- Refresh Button -->
    <Button
        android:id="@+id/btnFetch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔄 Refresh Data"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#3498db"
        android:textColor="#ffffff"
        android:padding="12dp"
        android:layout_marginTop="8dp" />

</LinearLayout>